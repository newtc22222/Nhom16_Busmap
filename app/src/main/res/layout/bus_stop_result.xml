<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="9dp"
        android:layout_height="4dp"
        android:background="@color/primary_600"
        android:layout_marginStart="14dp"
        android:layout_marginTop="22dp"/>

    <View
        android:id="@+id/line_vertical_first"
        android:layout_width="4dp"
        android:layout_height="32dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="26dp"
        android:background="@color/primary_600" />

    <View
        android:id="@+id/line_vertical_end"
        android:layout_width="4dp"
        android:layout_height="26dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="22dp"
        android:background="@color/primary_600" />

    <View
        android:visibility="invisible"
        android:id="@+id/order_first"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/primary_600"
        android:background="@drawable/corner_20" />

    <View
        android:visibility="invisible"
        android:id="@+id/order_black"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/corner_20" />

    <View
        android:visibility="invisible"
        android:id="@+id/order"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/order_round" />

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/quicksand_bold"
            android:paddingVertical="8dp"
            android:text="53"
            android:textColor="@color/primary_600"
            android:textSize="18sp" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_route"
            android:paddingVertical="8dp"
            android:text="Bến xe Chợ Lớn" />

        <LinearLayout
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/tv_name"
            android:background="@drawable/corner_5"
            android:backgroundTint="@color/primary_600"
            android:gravity="center"
            android:insetTop="4dp"
            android:orientation="vertical"
            android:padding="4dp"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail"
                android:textColor="@color/secondary_900"
                android:textSize="12dp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_main"
        android:layout_marginHorizontal="32dp"
        android:background="@color/secondary_400" />
</RelativeLayout>